.nav-item {
  margin-left: 20px;
  display: flex;
  justify-content: flex-end;
}

.greeting {
  width: 100%;
  height: 300px;
  background-image: url(<%= asset_path "shortcake.jpg" %>) ;
  background-size: cover;
  border-radius: 20px;
}

.greeting p {
  padding: 10px;
  border-radius: 20px;
  background-color: #fffacd;
  background-color: rgba(255, 240, 240, 0.8);
  color: #060606;
}

.table {
  border: 1px solid #060606;
}

.about-image {
  width: 200px;
  height: 200px;
  background-image: url(<%= asset_path "yakei.jpeg" %>) ;
  background-size: cover;
  border-radius: 50%;
  margin: 0 auto;
}

@media screen and (max-width:768px) {
  .nav-item {
    margin-left: 20px;
    display: flex;
    justify-content: flex-end;
    margin-top: 10px;
  }
  
  .nav-item a {
    transition: .3s;
    -webkit-transform: scale(1);
    transform: scale(1);
    border: none;
    padding: 5px;
  }
  
  .nav-item a:hover {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
    border: none;
    padding: 5px;
  }
}