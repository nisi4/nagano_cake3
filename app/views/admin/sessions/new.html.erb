<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-4 offset-lg-2"><span class="title px-2">管理者ログイン</span></h2>
      <%= form_with model: @admin,url: admin_session_path,method: :post do |f| %>
        <div class="row mt-3 d-flex justify-content-center align-items-center">
          <div class="col-sm-3 col-lg-2">メールアドレス</div>
          <div class="col-sm-5 col-lg-3"><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %></div>
        </div>
        <div class="row mt-3 d-flex justify-content-center align-items-center">
          <div class="col-sm-3 col-lg-2">パスワード</div>
          <div class="col-sm-5 col-lg-3"><%= f.text_field :password,autocomplete: "current-password",class: "form-control" %></div>
        </div>
        <div class="row mt-4 d-flex justify-content-center">
          <div class="col-4 col-sm-3 col-md-2">
            <%= f.submit "ログイン",class: "btn btn-primary text-white form-control" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
