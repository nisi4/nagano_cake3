<div class="container">
  <div class="row">
    <div class="col">
      <div class="row my-4">
        <h2>
          <span class="title">商品詳細</span>
        </h2>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= image_tag @item.item_image,class: "img-fluid" %>
        </div>
        <div class="col-md-7 ms-4">
          <div class="row mb-3">
            <div class="col-3">
              <span>商品名</span>
            </div>
            <div class="col-9">
              <%= @item.name %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-3">
              <span>商品説明</span>
            </div>
            <div class="col-9">
              <%= @item.introduction %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-3">
              <span>ジャンル</span>
            </div>
            <div class="col-9">
              <%= @item.genre.name %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-3">
              <span>税込価格<br>(税抜価格)</span>
            </div>
            <div class="col-9 d-flex align-items-center">
              <%= @item.tax_included_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-3">
              <span>販売ステータス</span>
            </div>
            <div class="col-9">
              <% if @item.is_active == true %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-secondary">販売停止中</span>
              <% end %>
            </div>
          </div>
          <div class="row offset-2 mt-4">
            <div class="col-5">
              <%= link_to "編集する",admin_item_edit_path(@item.id),class: "btn btn-success btn-lg text-white" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>