<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="row mt-4 mb-2 d-flex">
        <h2>
          <span class="title">商品一覧</span>
        </h2>
        <div class="new_item_link">
          <%= link_to admin_items_new_path do %>
            <div class="plus"></div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>