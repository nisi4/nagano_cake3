<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="row mt-4 mb-2 justify-content-between">
        <div class="col-3">
          <h2>
            <span class="title">商品一覧</span>
          </h2>
        </div>
        <div class="col-3 d-flex align-items-center justify-content-end">
          <%= link_to admin_items_new_path,class: "sphere d-flex justify-content-center align-items-center" do %>
            <div class="plus"></div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <table class="table table-bordered">
          <thead class="thead-color">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active == true %>
                  <span class="text-success">販売中</span>
                <% else %>
                  <span class="text-secondary">販売停止中</span>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>