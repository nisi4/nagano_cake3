<div class="container-fluid">
  <div class="row mt-2">
    <div class="col-3 col-lg-2">
      <div class="genre mt-4 ms-5">
        <table class="table">
            <tr>
              <td class="text-center">ジャンル検索</td>
            </tr>
            <% @genres.each do |genre| %>
            <tr>
              <td class="border-bottom-0 py-3"><%= genre.name %></td>
            </tr>
            <% end %>
        </table>
      </div>
    </div>
    <div class="col-9 ms-5">
      <div class="row my-4">
        <div class="item-title">
          <h1>商品一覧<span class="h5">（全<%= @item_count %>件）</span></h1>
        </div>
        <div class="row d-flex">
          <% @items.each do |item| %>
          <div class="col-lg-3 px-2 py-2">
            <%= link_to public_item_show_path(item.id),class: "text-dark text-decoration-none" do %>
            <div class="card h-100">
              <%= image_tag item.item_image,class: "h-100 img-fluid" if item.item_image.attached? %>
              <div class="card-body">
                <%= item.name %><br>
                ¥<%= item.tax_included_price %>
              </div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="row mb-3 d-flex justify-content-center">
        <div class="col-2">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>