<div class="container-fluid">
  <div class="row mt-2">
    <div class="col-3 col-lg-2">
      <div class="genre mt-4 ms-5">
        <table class="table">
            <tr>
              <td class="text-center">ジャンル検索</td>
            </tr>
            <% @genres.each do |genre| %>
            <tr>
              <td class="border-bottom-0 py-3"><%= genre.name %></td>
            </tr>
            <% end %>
        </table>
      </div>
    </div>
    <div class="col-9 ms-5">
      <div class="row my-4">
        <div class="col-5">
          <%= image_tag @item.item_image,class: "img-fluid" if @item.item_image.attached? %>
        </div>
        <div class="col-6 ps-5">
          <h2 class="my-2"><%= @item.name %></h2>
          <p class="mt-2 mb-5"><%= @item.introduction %></p>
          <h2>¥ <%= @item.tax_included_price %><span class="h6">（税込）</span></h2>
          <%= form_with model: @cart_item,url: public_cart_items_path,method: :post do |f| %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <div class="row mt-4">
              <div class="col-3 d-flex align-items-center">
                <%= f.select :amount,*[1..10],prompt: "個数選択" %>
              </div>
              <div class="col-3 ms-4">
                <%= f.submit "カートに入れる",class: "btn btn-success btn-lg text-white" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>