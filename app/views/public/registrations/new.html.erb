<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-4">新規会員登録</h2>

      <%= form_with url: customer_registration_path,method: :post do |f| %>
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">名前</div>
          <div class="col-1">(姓)</div>
          <div class="col-3"><%= f.text_field :last_name,class: "form-control" %></div>
          <div class="col-1">(名)</div>
          <div class="col-3"><%= f.text_field :first_name,class: "form-control" %></div>
        </div>
        
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">フリガナ</div>
          <div class="col-1">(セイ)</div>
          <div class="col-3"><%= f.text_field :last_name_kana,class: "form-control" %></div>
          <div class="col-1">(メイ)</div>
          <div class="col-3"><%= f.text_field :first_name_kana,class: "form-control" %></div>
        </div>
        
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">メールアドレス</div>
          <div class="col-1"></div>
          <div class="col-3"><%= f.email_field :email,class: "form-control" %></div>
        </div>
        
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">郵便番号(ハイフンなし)</div>
          <div class="col-1"></div>
          <div class="col-3"><%= f.text_field :postal_code,class: "form-control" %></div>
        </div>
        
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">住所</div>
          <div class="col-1"></div>
          <div class="col-7"><%= f.text_field :address,class: "form-control" %></div>
        </div>
        
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">電話番号(ハイフンなし)</div>
          <div class="col-1"></div>
          <div class="col-3"><%= f.text_field :telephone_number,class: "form-control" %></div>
        </div>
        
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">パスワード(６文字以上)</div>
          <div class="col-1"></div>
          <div class="col-3"><%= f.text_field :password, autocomplete: "new-password",class: "form-control" %></div>
        </div>
        
        <div class="row mt-3 d-flex align-items-center">
          <div class="col-3">パスワード(確認用)</div>
          <div class="col-1"></div>
          <div class="col-3"><%= f.text_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></div>
        </div>
      
        <div class="row mt-4 d-flex justify-content-center">
          <div class="col-2">
            <%= f.submit "新規登録",class: "btn btn-success text-white form-control" %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</div>

